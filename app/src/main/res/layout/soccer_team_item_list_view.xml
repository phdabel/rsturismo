<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/team_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/team_logo_image_view"
            android:layout_width="90dp"
            android:layout_height="100dp"
            tools:src="@drawable/internacional_logo" />

        <TextView
            android:id="@+id/team_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/team_logo_image_view"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Sport Club Internacional" />

        <TextView
            android:id="@+id/foundation_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_name_text_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/team_logo_image_view"
            android:text="@string/foundation_date_label"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_foundation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foundation_label_text_view"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/team_logo_image_view"
            android:textSize="16sp"
            tools:text="26/03/1772" />

    </RelativeLayout>

    <TextView
        android:id="@+id/team_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_relative_layout"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:text="bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla " />

    <TextView
        android:id="@+id/stadium_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_description_text_view"
        android:layout_marginTop="10dp"
        android:text="@string/stadium_label"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stadium_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stadium_label_text_view"
        android:textSize="16sp"
        tools:text="Beira Rio" />

    <ImageView
        android:id="@+id/stadium_image_view"
        android:layout_width="230dp"
        android:layout_height="150dp"
        tools:src="@drawable/estadio_internacional" />

</LinearLayout>