<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:alpha="0.65"
        android:contentDescription="@string/farroupilha_park"
        android:scaleType="fitXY"
        android:src="@drawable/arco_redencao" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaucho Culture" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Porto Alegre" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaucho Coast" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaucho Sierra" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Missions Trail" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pampa Region" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valley of the Sinos River" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grape and Wine Region" />

            <TextView
                style="@style/MainLayoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>